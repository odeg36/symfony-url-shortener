# Symfony environment configuration
# Copy this file to .env and adjust values as needed

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=change-this-secret-in-production
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Database connection
# For local development with Docker:
DATABASE_URL="postgresql://symfony:symfony@db:5432/symfony?serverVersion=13&charset=utf8"
# For production, use strong passwords and managed database services
###< doctrine/doctrine-bundle ###

###> nelmio/cors-bundle ###
# CORS allowed origins (comma-separated)
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'
###< nelmio/cors-bundle ###

# Application base URL (used for generating full short URLs)
APP_BASE_URL=http://localhost:8080

# URL validation - set to false to skip reachability checks (useful for testing)
VALIDATE_URL_REACHABILITY=true
